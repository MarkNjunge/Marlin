<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.TextPrimary">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">.87</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextSecondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="AppTheme.TextMuted">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">.54</item>
    </style>

    <style name="AppTheme.PrimaryButton">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="AppTheme.SecondaryButton">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_height">56dp</item>
    </style>

</resources>
